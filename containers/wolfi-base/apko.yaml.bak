contents:
  repositories:
    - https://packages.wolfi.dev/os
  keyring:
    - https://packages.wolfi.dev/os/wolfi-signing.rsa.pub
  packages:
    - wolfi-baselayout
    - busybox
    - ca-certificates-bundle
    - ssl-certificates

annotations:
  org.opencontainers.image.description: "Wolfi base image"
  org.opencontainers.image.source: "https://github.com/wolfi-dev"

entrypoint:
  command: /bin/sh

archs:
  - x86_64

environment:
  PATH: /usr/sbin:/usr/bin:/sbin:/bin